@using Microsoft.AspNetCore.Http
@{
    var email = Context.Session.GetString("AuthEmail");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fresh Farm Market</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, sans-serif; background: #f6f7fb; }
        .brandbar { background: linear-gradient(90deg, #1f2937, #0f766e); }
        .brandbar .navbar-brand { font-weight: 800; letter-spacing: .2px; }
        .card { border: 0; box-shadow: 0 10px 25px rgba(0,0,0,.06); border-radius: 16px; }
        .pill { border-radius: 999px; }
        .muted { color: #6b7280; }
        .mono { font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace; }
    </style>
</head>
<body>
<header class="brandbar">
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" asp-page="/Index">Fresh Farm Market</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMain">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navMain">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" asp-page="/Home/Index">Dashboard</a></li>
                </ul>

                <ul class="navbar-nav ms-auto align-items-lg-center">
                    @if (string.IsNullOrEmpty(email))
                    {
                        <li class="nav-item"><a class="nav-link" asp-page="/Account/Register">Create account</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Account/Login">Sign in</a></li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <span class="nav-link">Signed in as <span class="fw-semibold">@email</span></span>
                        </li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Account/ChangePassword">Change password</a></li>
                        <li class="nav-item">
                            <form method="post" asp-page="/Account/Logout" class="d-inline">
                                <button type="submit" class="btn btn-light btn-sm pill px-3 ms-lg-2">Logout</button>
                            </form>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<main class="container py-4">
    @RenderBody()
</main>

<footer class="container pb-4">
    <div class="muted small">© @DateTime.Now.Year Fresh Farm Market • Demo security portal</div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>
