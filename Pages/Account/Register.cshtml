@page
@model HarvestHavenSecurePortal.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Create account";
}

<div class="row justify-content-center">
  <div class="col-lg-9">
    <div class="card p-4">
      <div class="d-flex justify-content-between align-items-center mb-2">
        <h2 class="mb-0">Create your account</h2>
        <span class="badge text-bg-dark pill">Razor Pages â€¢ .NET 8</span>
      </div>
      <p class="muted">All sensitive fields are validated server-side. Card number is encrypted at rest.</p>

      @if (!string.IsNullOrEmpty(Model.Message))
      {
          <div class="alert alert-danger">@Model.Message</div>
      }

      <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row g-3">
          <div class="col-md-6">
            <label asp-for="Input.FullName" class="form-label"></label>
            <input asp-for="Input.FullName" class="form-control" />
            <span asp-validation-for="Input.FullName" class="text-danger"></span>
          </div>
          <div class="col-md-6">
            <label asp-for="Input.Email" class="form-label"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
          </div>

          <div class="col-md-4">
            <label asp-for="Input.Gender" class="form-label"></label>
            <select asp-for="Input.Gender" class="form-select">
              <option value="">-- select --</option>
              <option>Male</option>
              <option>Female</option>
              <option>Prefer not to say</option>
            </select>
            <span asp-validation-for="Input.Gender" class="text-danger"></span>
          </div>
          <div class="col-md-4">
            <label asp-for="Input.PhoneNumber" class="form-label"></label>
            <input asp-for="Input.PhoneNumber" class="form-control" />
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
          </div>
          <div class="col-md-4">
            <label asp-for="Input.CardNumber" class="form-label"></label>
            <input asp-for="Input.CardNumber" class="form-control" />
            <span asp-validation-for="Input.CardNumber" class="text-danger"></span>
            <div class="form-text">Demo: we encrypt this before saving.</div>
          </div>

          <div class="col-md-6">
            <label asp-for="Input.Password" class="form-label"></label>
            <input asp-for="Input.Password" class="form-control" type="password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
            <div class="form-text">12+ chars, upper/lower, number, special.</div>
          </div>
          <div class="col-md-6">
            <label asp-for="Input.ConfirmPassword" class="form-label"></label>
            <input asp-for="Input.ConfirmPassword" class="form-control" type="password" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
          </div>

          <div class="col-md-6">
            <label asp-for="Input.Photo" class="form-label">Photo (JPG only)</label>
            <input asp-for="Input.Photo" class="form-control" type="file" accept=".jpg,.jpeg,image/jpeg" />
            <span asp-validation-for="Input.Photo" class="text-danger"></span>
          </div>
          <div class="col-md-6">
            <label asp-for="Input.DeliveryAddress" class="form-label"></label>
            <input asp-for="Input.DeliveryAddress" class="form-control" />
            <span asp-validation-for="Input.DeliveryAddress" class="text-danger"></span>
          </div>

          <div class="col-12">
            <label asp-for="Input.Bio" class="form-label">Bio (special chars allowed)</label>
            <textarea asp-for="Input.Bio" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Input.Bio" class="text-danger"></span>
          </div>
        </div>

        <div class="d-flex gap-2 mt-4">
          <button type="submit" class="btn btn-primary pill px-4">Create account</button>
          <a class="btn btn-outline-secondary pill px-4" asp-page="/Account/Login">Already have one?</a>
        </div>
      </form>
    </div>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
